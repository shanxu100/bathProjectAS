<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <color android:color="#cccccc" />
    </item>

    <!-- 触摸按下时 -->
    <item android:state_pressed="true">
