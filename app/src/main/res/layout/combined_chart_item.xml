<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:id="@+id/combined_chart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/chart_item_title_text"
        android:background="@color/chart_item_title_bg"
        android:paddingLeft="@dimen/chart_item_title_padding"
        android:textSize="@dimen/fragment_text_size"
        android:gravity="left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/combined_chart_refreshtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/combined_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>